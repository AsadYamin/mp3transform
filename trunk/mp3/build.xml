<?xml version="1.0" encoding="UTF-8"?>
<project name="mp3" default="build" basedir=".">
    <target name="clean">
        <delete dir="bin"/>
        <mkdir dir="bin"/>
    </target>
    <target name="build" depends="clean">
        <javac destdir="bin">
            <src path="src"/>
        </javac>
        <copy todir="bin" includeemptydirs="false">
            <fileset dir="src" excludes="**/*.launch, **/*.java"/>
        </copy>
		<mkdir dir="bin/META-INF"/>
		<manifest file="bin/META-INF/MANIFEST.MF">
			<attribute name="Main-Class" value="mp3.awt.Player"/>
		</manifest>    	
		<jar jarfile="bin/mp3.jar" basedir="bin" manifest="bin/META-INF/MANIFEST.MF">
			<include name="**/*.*"/>
    	</jar>
		<delete includeemptydirs="true">
			<fileset dir="bin" includes="**/*" excludes="**/*.bat,**/*.jar"/>
		</delete>
    </target>
</project>
